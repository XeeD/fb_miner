source 'https://rubygems.org'

# Server
gem 'rails', '4.0.0.rc2'
gem 'unicorn'

# Database
gem 'sqlite3'

# CSS
gem 'sass-rails', '~> 4.0.0.rc2'
gem 'bootstrap-sass'

# Views
gem 'haml-rails'
gem 'simple_form'

# Javascript
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'therubyracer', platforms: :ruby
gem 'jbuilder', '~> 1.2'
gem 'jquery-rails'
gem 'turbolinks'

# Scrapping
gem 'watir'
gem 'mechanize'

# Processes
gem 'foreman'

# Jobs & timing
gem 'sidekiq'
gem 'clockwork'

# Development specific gems
group :development, :test do
  gem 'dotenv-rails'
end

# Documentation
group :doc do
  gem 'sdoc', require: false
end
